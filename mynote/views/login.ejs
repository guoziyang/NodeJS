<%- include header %>
<div class="text-center page-title">用户登录</div>
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control" id="username" name="username" placeholder="用户名">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="密码">
                </div>
                <span id="errEmpty" class="err-tips">用户名或密码不能为空!</span>
                <% if(status=='2') { %>
                <span id="errUser" class="red-tips">用户名或密码错误!</span>
                <% } %>
                <button id="login" type="submit" class="weui-btn weui-btn_primary">登录</button>
            </form>
        </div>
    </div>
</div>

<%- include footer %>